<h1 class="mb-1 restaurant-show-title">{{restaurant.name}}</h1>
<div class="d-flex">

  {{!-- Back Button --}}
  <div>
    <a href="/restaurants" class="badge rounded-pill" id="detail-back-button" style="color: #bc2e0b;">
      Back
    </a>
  </div>

  <div class="container">
    <div class="row">
      <div class="col-12 col-md-10 mx-auto">
        <div class="d-flex justify-content-between">
          <p class="mb-1">
            <span class="text-secondary">
              <i class="fas fa-utensils pr-2"></i>
              類別：
            </span>
            {{restaurant.category}}
          </p>
          <div>
            {{!-- Edit Button --}}
            <a href="/restaurants/{{restaurant.id}}/edit" class="me-5" style="text-decoration: none">
              <i class="fa-solid fa-pen fa-xl" style="color: #bc2e0b"></i>
            </a>
            {{!-- Delete Button --}}
            <form action="/restaurants/{{restaurant.id}}?_method=DELETE" method="POST" style="display: inline">
              <button class="bg-transparent border border-0">
                <i class="fa-solid fa-xmark fa-2xl" style="color: #bc2e0b"></i>
              </button>
            </form>
          </div>

        </div>



        <p class="mb-1">
          <span class="text-secondary">
            <i class="fas fa-map-marker-alt pr-2"></i>
            地址：
          </span>
          {{restaurant.location}}
          <a href="{{restaurant.googlemap}}" class="text-secondary" target="_blank">
            <i class="fas fa-location-arrow pr-2 fa-xs"></i>
          </a>
        </p>

        <p class="mb-1">
          <span class="text-secondary">
            <i class="fas fa-mobile-alt pr-2"></i>
            電話：
          </span>
          {{restaurant.phone}}
        </p>

        <p class="mb-5">
          {{restaurant.description}}
        </p>

        <img class="rounded mx-auto d-block mb-4 w-100" src="{{restaurant.image}}" alt="{{restaurant.name}}"
          style="max-width: 600px;">
      </div>
    </div>
  </div>
</div>